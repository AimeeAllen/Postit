<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <div class='control-group'>
    <%= f.label "Post Categories" %>
    <%= f.collection_check_boxes :category_ids, sort_categories_by_name!(Category.all), :id, :name do |cb| %>
      <% cb.label(class: 'checkbox inline') {cb.check_box(class: 'checkbox') + cb.text} %>
    <% end %>
  </div>

  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 5 %>
  <br/>
  <%= f.submit (@post.new_record? ? "Create Post" : "Update Post"), class: "btn btn-primary" %>
<% end %>
