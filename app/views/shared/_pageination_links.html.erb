<div class='text-center'>
  <% pages.times do |n| %>
    <span class='badge badge-success'>
    <% if (params[:offset].to_s == (n*items_per_page).to_s) || (params[:offset].nil? && n==0) %>
      Current Page
    <% else %>
      <%= link_to "Page #{n+1}", url_for(offset: (n*items_per_page)) %>
    <% end %>
    </span>
  <% end %>
</div>
