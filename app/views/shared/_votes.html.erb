<div class='span1 well text-center'>
  <% if logged_in? %>
    <%= link_to polymorphic_path([:vote, voteable_object], vote: true), method: 'post' do %>
      <i class='icon-arrow-up'></i>
    <% end %>
    <br/>
  <% end %>
  <%= pluralize(voteable_object.number_of_votes, 'vote') %>
  <% if logged_in? %>
    <br/>
    <%= link_to polymorphic_path([:vote, voteable_object], vote: false), method: 'post' do %>
      <i class='icon-arrow-down'></i>
    <% end %>
  <% end %>
</div>
