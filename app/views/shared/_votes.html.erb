<div class='span1 well text-center'>
  <% if logged_in? %>
    <%= link_to polymorphic_path(vote_path(voteable_object), vote: true), method: 'post', remote: true do %>
      <i class='icon-arrow-up'></i>
    <% end %>
    <br/>
  <% end %>
  <div id='<%=votes_id_tag(voteable_object)%>'>
    <%= display_vote_number(voteable_object) %>
  </div>
  <% if logged_in? %>
    <%= link_to polymorphic_path(vote_path(voteable_object), vote: false), method: 'post', remote: true do %>
      <i class='icon-arrow-down'></i>
    <% end %>
  <% end %>
</div>
